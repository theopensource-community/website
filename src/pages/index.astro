---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
/* import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro'; */
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'The Open Source Community',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Watch us on GitHub',
        href: 'https://github.com/theopensource-community/website/',
        target: '_blank',
        icon: 'tabler:binoculars',
      },
      { 
        text: 'Get in touch', 
        href: getPermalink('/contact'),
        icon: 'tabler:message-chatbot',
      },
    ]}
  >
    <Fragment slot="title">
      Seeking to 
      <span class="text-primary dark:text-white highlight">support & uplift</span> open source communities ðŸª¶
    </Fragment>

    <Fragment slot="subtitle">
      We're here to support <span class="font-semibold">developers, end users, and open source projects</span> through providing resources for all and helping users get started working with or contributing to projects quickly.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="comingsoon"
    tagline="Coming soon"
    title="What we plan to do"
    subtitle="Laying out all our plans and aspirations, to enable others who want to be involved"
    items={[
      {
        title: 'Support virtual & in-person events',
        description:
          'Help organizers obtain sponsors, lock in a location, find speakers, enable diversity & accessibility, connect with available volunteers, have support through advocacy, etc. no matter whether they\'re a user group, conference, or someone looking to host a one-time event.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Help speakers',
        description:
          'Compile and host resources designed to help speakers find events to speak at, be found by events looking for speakers, build their personal brand, meet with others willing to review ideas, abstracts, slides, or initial presentations, and learn how to improve their public speaking skills.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Promote educational initiatives',
        description:
          'Provide training sessions, educational content, office hours, and mentorship programs connecting willing mentors with those who would like to learn how to contribute to or hack on different open source technologies available within our supported projects.',
        icon: 'tabler:school',
      },
      {
        title: 'Provide software licenses & hardware',
        description:
          'Acquire and disperse software licenses & hardware to individuals in need as part of programs designed to foster diversity & inclusion. Targets include schools, career building programs, and local communities as well as a generally available scholarship program.',
        icon: 'tabler:terminal-2',
      },
      {
        title: 'Encourage participation',
        description:
          'Create quickstarts and tailored community landing pages for open source projects, host programs connecting contributors and projects, run hackathons, and fund giveaways & lotteries as incentives for engagement from contributors, users, and developers.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Fund volunteer efforts',
        description:
          'Help open source projects in need of advocacy, design, marketing, development, content, or workflow contributions through bounty programs, consultations, and matching willing individuals with projects. For all programs, funding and/or incentives will be offered where possible.',
        icon: 'tabler:mood-dollar',
      },
    ]}
  />

